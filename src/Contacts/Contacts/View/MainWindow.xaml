<Window x:Class="Contacts.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        mc:Ignorable="d"
        Title="Contacts" Height="400" Width="650"
        MinHeight="450" MinWidth="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Background="#f8f8f8">
            <DockPanel Margin="8" Grid.Column="0" LastChildFill="True">
                <DockPanel DockPanel.Dock="Top" LastChildFill="True">
                    <TextBlock Text="Find:" Margin="3" 
                           DockPanel.Dock="Left" VerticalAlignment="Center"/>
                    <TextBox Margin="3" Width="Auto"/>
                </DockPanel>
                <DockPanel LastChildFill="True">
                    <Grid DockPanel.Dock="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Height="25" Content="Add" Margin="3"/>
                        <Button Grid.Column="1" Height="25" Content="Edit" Margin="3"/>
                        <Button Grid.Column="2" Height="25" Content="Remove" Margin="3"/>
                    </Grid>
                    <ListBox DockPanel.Dock="Top" Margin="3">

                    </ListBox>
                </DockPanel>
            </DockPanel>
        </Grid>
        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" Width="3" 
                      ShowsPreview="False" HorizontalAlignment="Center"/>
        <Grid Margin="8" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</Window>
