<Window
    x:Class="Contacts.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:View.Services"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:View.View.Controls"
    Title="Contacts"
    Width="650"
    Height="400"
    MinWidth="450"
    MinHeight="450"
    mc:Ignorable="d">
    <Window.Resources>
        <local:VisibleConverter x:Key="VisibleConverter"/>
        <DataTemplate x:Key="ContactTemplate">
            <DockPanel LastChildFill="true">
                <Image
                    Width="40"
                    Height="40"
                    Margin="3px"
                    DockPanel.Dock="Left"
                    Source="/Resources/photo_placeholder_100x100.png"/>
                <TextBlock
                    Margin="3"
                    DockPanel.Dock="Top"
                    FontWeight="Bold"
                    Text="{Binding Path=FirstName}"/>
                <TextBlock
                    Margin="3"
                    DockPanel.Dock="Bottom"
                    Text="{Binding Path=Phone}"/>
            </DockPanel>
        </DataTemplate>
    </Window.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding SaveContactsCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1.8*"/>
        </Grid.ColumnDefinitions>
        <Grid Background="#f8f8f8">
            <DockPanel
                Grid.Column="0"
                Margin="8"
                LastChildFill="True">
                <DockPanel DockPanel.Dock="Top" LastChildFill="True">
                    <TextBlock
                        Margin="3"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"
                        Text="Find:"/>
                    <TextBox Width="Auto" Margin="3"/>
                </DockPanel>
                <DockPanel LastChildFill="True">
                    <Grid DockPanel.Dock="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Column="0"
                            Height="25"
                            Margin="3"
                            Command="{Binding Path=AddContactCommand}"
                            Content="Add"
                            IsEnabled="{Binding Path=IsReadOnly}"/>
                        <Button
                            Grid.Column="1"
                            Height="25"
                            Margin="3"
                            Command="{Binding Path=AutoGenerationContactCommand}"
                            Content="Auto"
                            IsEnabled="{Binding Path=IsReadOnly}"/>
                        <Button
                            Grid.Column="2"
                            Height="25"
                            Margin="3"
                            Command="{Binding Path=EditContactCommand}"
                            Content="Edit"
                            IsEnabled="{Binding Path=IsReadOnly}"/>
                        <Button
                            Grid.Column="3"
                            Height="25"
                            Margin="3"
                            Command="{Binding Path=RemoveContactCommand}"
                            Content="Remove"
                            IsEnabled="{Binding Path=IsReadOnly}"/>
                    </Grid>
                    <ListBox
                        x:Name="ContactsListBox"
                        Margin="3"
                        DockPanel.Dock="Top"
                        ItemTemplate="{StaticResource ResourceKey=ContactTemplate}"
                        ItemsSource="{Binding Path=Contacts}"
                        SelectedItem="{Binding Path=CurrentContact, UpdateSourceTrigger=PropertyChanged}">
                    </ListBox>
                </DockPanel>
            </DockPanel>
        </Grid>
        <GridSplitter
            Grid.Column="1"
            Width="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            ShowsPreview="False"/>
        <Grid
            Grid.Column="2"
            Margin="8"
            Background="#ffff">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <uc:ContactControl
                Grid.Row="0"
                Grid.RowSpan="2"
                DataContext="{Binding Path=CurrentContact, Mode=TwoWay}"
                />
            <Button
                Grid.Row="1"
                Width="75"
                Height="25"
                Margin="3 50 3 3"
                HorizontalAlignment="Left"
                Command="{Binding Path=ApplyContactCommand}"
                Content="Apply"
                Visibility="{Binding Path=IsVisible, Converter={StaticResource VisibleConverter}, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
    </Grid>
</Window>
